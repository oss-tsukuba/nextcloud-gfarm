version: '3.4'

# variables from .env

services:
  nextcloud:
    environment:
      - VIRTUAL_HOST=${VIRTUAL_HOST}

  proxy:
    build: ./proxy
    ports:
      - ${HTTP_PORT}:${HTTP_PORT}
    environment:
      - DEFAULT_HOST=${VIRTUAL_HOST}
      - HTTP_PORT=${HTTP_PORT}
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - vhost.d:/etc/nginx/vhost.d
      - html:/usr/share/nginx/html

volumes:
  vhost.d:
  html:
